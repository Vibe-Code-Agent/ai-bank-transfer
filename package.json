{
    "name": "ai-bank-transfer-qr",
    "version": "1.0.0",
    "description": "AI-powered bank transfer QR code generator using Gemini AI and VietQR API",
    "main": "dist/backend/server.js",
    "scripts": {
        "dev:backend": "tsx watch src/backend/server.ts",
        "dev:frontend": "vite",
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "build": "npm run build:backend && npm run build:frontend",
        "start": "node dist/backend/server.js",
        "build:backend": "tsc --project tsconfig.backend.json",
        "build:frontend": "vite build",
        "postinstall": "npm run build"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "axios": "^1.6.2",
        "@google/generative-ai": "^0.2.1",
        "js-yaml": "^4.1.0"
    },
    "devDependencies": {
        "typescript": "^5.3.2",
        "vite": "^5.0.8",
        "@types/node": "^20.10.4",
        "@types/express": "^4.17.21",
        "@types/cors": "^2.8.17",
        "@types/js-yaml": "^4.0.9",
        "tsx": "^4.6.2",
        "concurrently": "^8.2.2"
    },
    "keywords": [
        "qr-code",
        "bank-transfer",
        "vietnam",
        "ai",
        "gemini",
        "vietqr"
    ],
    "author": "Your Name",
    "license": "MIT"
}
